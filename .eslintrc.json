{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["prettier", "eslint:recommended"],
  "plugins": ["prettier", "eslint-plugin-prettier", "eslint-config-prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "allowUnicodeIdentifiers": true
  },
  "rules": {
    "prettier/prettier": "error",
    "camelcase": ["error"],
    "eqeqeq": ["error", "always"],
    "no-unused-vars": "warn"
  }
}
